import math
import numpy as np
import matplotlib.pyplot as ptl

def grafica():
    x=np.arange(-2,6,0.1)
    y=(-3*x/2)+9
    z=(x/2)+1
    ptl.plot(x,y,'salmon')
    ptl.plot(x,z,'dodgerblue')
    ptl.grid(True)
    ptl.show()

grafica()
